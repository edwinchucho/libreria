{% extends 'content_base.html.twig' %}

{% block title %}Manage user{% endblock %}

{% block content_class %}
    {{ parent() }}
    show-article-container-border-green
{% endblock %}

{% block content_body %}
    <div class="row">
        <div class="col-sm-12">
            <h1>Manage user ({{ pagination.getTotalItemCount }})</h1>

            <form>
                <div class="input-group mb-3">
                    <input type="text"
                           name="q"
                           class="form-control"
                           value="{{ app.request.query.get('q') }}"
                           placeholder="Search..."
                    >
                    <div class="input-group-append">
                        <button type="submit"
                                class="btn btn-outline-secondary">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>id</th>
                    <th>email</th>
                    <th>firstName</th>
                    <th>roles</th>
                    <th>creado</th>
                </tr>
                </thead>
                <tbody>
                {% for campo in pagination %}
                    <tr>
                        <td>
                            {{ campo.id }}
                        </td>
                        <td>
                            {{ campo.email }}
                        </td>
                        <td>
                            {{ campo.firstName }}
                        </td>
                        <td>
                            {{ campo.roles|join(',') }}
                        </td>
                        <td>
                            {{ campo.roles|join(',') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            No user found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
